/* General
---------------------------------------------------------*/
*, :after, :before {
box-sizing: border-box;
}
body,
html {
margin:0;
padding:0;
}

body{
    background-color: #000;
    margin:0;
}

div#mainContent{
    padding:.3em;
    background-color: #000;
    width: 100%;
    margin: 0 auto;
    text-align: center;
    font-size: 2rem;
    color: #fff;
}

div#indexContent{
    padding:.3em;
    background-color: #000;
    width: 100%;
    margin: 0 auto;
    text-align: left;
    font-size: 2rem;
    color: #fff;
}

div#mainContent h1 {
    margin:0 0 .5em 2;
    font-size:3rem;
}

div#indexContent h1 {
    margin:0 0 0.6em 0;
    font-size:3rem;
}

div#mainContent ul{
    list-style: none;
    margin: 0;
    padding: 0;
}

div#mainContent form {
    margin-top:-2em;
}

div#indexContent ul{
    list-style: none;
    margin: 0;
    padding: 0;
}

div#indexContent form {
    margin-top:1em;
}

label[for=ssid],
label[for=wifi_key]{
    font-size:1.4rem;
}

label[for=menu]{
    font-size:1.4rem;
}

/* Select
---------------------------------------------------------*/

li.label {
    display:inline-block;
    margin: 0.5em 0;
    padding: 0.5em 0;
}

li.wifiNetwork {
    position: relative;
    margin: 0;
}

li.wifiNetwork:after {
    content: '▼';
    position: absolute;
    width: 25px;
    color: #deab04;
    font-weight: bold;
    font-size: 1.4rem;
    right: 0px;
    top: 40%;
    border-radius: 3px;
    pointer-events: none;
    z-index: 2;
}

select.wifiNetworkInputs {
    position: relative;
    width: 100%;
    background: #111;
    color: #999;
    border: none;
    outline: none;
    font-size: 1.5rem;
    padding: 1em;
    margin: 0;
    border-radius: 3px;
    cursor: pointer;
    height: auto;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
}

.wifiNetworkInputs{
    width: 100%;
    margin:2em 0;
    padding:.5em;
    font-size: 1.4rem;
    color: #fff;
    background: #111;
    border:#999 solid 1px;
}

.wifiConnectButton{
    width: 100%;
    margin:2em 0;
    padding:.5em;
    background-color: #800000;
    font-size: 1rem;
    color: #fff;
}

.manualSSIDEntry{
	font-size: 1.5rem;
	color: #deab04;
}

.vol{
        font-size: 2rem;
        color: #ffffcc;
}

.link{
        font-size: 1.5rem;
        color: #c29970;
}

.button{
        color: #ffffff;
        background-color: #2b0000;
        border-radius: 100%;
}

.button1{
        color: #8c8b8b;
        background-color: #3b0000;
        border-radius: 50%;
}

.button2{
        color: #ffffff;
        background-color: #2b0000;
}

.button3{
        color: #ffffff;
        background-color: #002136;
        border-radius: 100%;
}

.button4{
        color: #ffffff;
        background-color: #2b0000;
        border-radius: 50%;
}

/* Wifi Icon
---------------------------------------------------------*/

.wifiIcon {
    padding: 10px;
}
.wifiIcon, .wifiIcon:before {
    display: inline-block;
    border: 40px double transparent;
    border-top-color: #999;
    border-radius: 50%;
}
.wifiIcon:before {
    content: '';
    width: 0; height: 0;
}

/* Desktop
---------------------------------------------------------*/

@media (min-width: 800px) {
    div#mainContent h1 {
        font-size:4.5rem;
    }
    div#mainContent {
        max-width:768px;
    }

@media (min-width: 800px) {
    div#indexContent h1 {
        font-size:4.5rem;
    }
    div#indexContent {
        max-width:768px;
    }

    li.wifiNetwork:after {
        content: '▼';
        position: absolute;
        width: 50px;
        color: #deab04;
        font-weight: bold;
        font-size: 2rem;
        right: 0px;
        bottom: 50px;
        border-radius: 3px;
        pointer-events: none;
        z-index: 2;
    }

}

/* volume slider
---------------------------------------------------------*/

.wrapper {
  position: center;
  margin: 1rem;
}

input[type=range] {
  -webkit-appearance: none; 
  max-width: 15rem;
  width: 100%; 
  background: transparent; 
}

input[type=range]:focus {
  outline: none;
}

input[type=range]::-webkit-slider-runnable-track {
  height: 0.9rem;
  margin: 0;
  width: 100%;
  cursor: pointer;
  background: #27678f;
  background: linear-gradient(
    to bottom right, 
    transparent 50%,
    #27678f 50%
  );
}

input[type=range]::-moz-range-track {
  height: 0.9rem;
  margin: 0;
  width: 100%;
  cursor: pointer;
  background: #27678f;
  background: linear-gradient(
    to bottom right, 
    transparent 50%,
    #27678f 50%
  );
}

input[type=range]::-ms-track {
  height: 0.9rem;
  margin: 0;
  width: 100%;
  cursor: pointer;
  color: transparent;
  background: #27678f;
  border: 0;
  background: linear-gradient(
    to bottom right, 
    transparent 50%,
    #27678f 50%
  );
}

input[type=range]::-ms-fill-lower {
 background: transparent;
}

input[type=range]::-webkit-slider-thumb {
  -webkit-appearance: none;
  height: 1.5rem;
  width: 0.5rem;
  background: #ffffff;
  border: 1px solid;
  margin-top: -5px;
  border-radius: 3px;
  cursor: pointer;
}

input[type=range]:focus::-webkit-slider-thumb {
  box-shadow: 0px 0px 7px 3px #0065c4;
}

input[type=range]::-moz-range-thumb {
  -webkit-appearance: none;
  height: 1.5rem;
  width: 0.5rem;
  background: #ffffff;
  border: 1px solid;
  border-radius: 3px; 
  cursor: pointer;
  margin-top: 0;
}

input[type=range]:focus::-moz-range-thumb {
  box-shadow: 0px 0px 7px 3px #0065c4;
}

input[type=range]::-ms-thumb {
  -webkit-appearance: none;
  height: 0.75rem;
  width: 0.5rem;
  background: #ffffff;
  border: 1px solid;
  margin-top: 0;
  border-radius: 3px;
  cursor: pointer;
}

input[type=range]:focus::-ms-thumb {
  box-shadow: 0px 0px 7px 3px #0065c4;
}

.visually-hidden { 
    position: absolute !important;
    height: 1px; 
    width: 1px;
    overflow: hidden;
    clip: rect(1px 1px 1px 1px); /* IE6, IE7 */
    clip: rect(1px, 1px, 1px, 1px);
    white-space: nowrap; /* added line */
}
	
/* Slider
---------------------------------------------------------*/

input[type=range] {
    -webkit-appearance: none;
    background-color: #334e61;
    width: 240px;
    height:10px;
}

input[type="range"]::-webkit-slider-thumb {
    -webkit-appearance: none;
    background-color: #666;
    opacity: 0.5;
    width: 0px;
    height: 0px;
}
